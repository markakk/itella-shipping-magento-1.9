<?xml version="1.0"?>
<config>
    <modules>
        <Itella_Shipping>
            <version>1.0.1</version>
        </Itella_Shipping>
    </modules>
    <global>
        <blocks>
            <itella_shipping>
                <class>Itella_Shipping_Block</class>
            </itella_shipping>
        </blocks>
        <fieldsets>
            <sales_convert_quote>                           
                <itella_pickup_point>
                    <to_order>*</to_order>
                </itella_pickup_point>
            </sales_convert_quote>

            <sales_convert_order>                                              
                <itella_pickup_point>
                    <to_quote>*</to_quote>
                </itella_pickup_point>
            </sales_convert_order>
        </fieldsets>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <itella_pickup_point_observer>
                        <type>singleton</type>
                        <class>itella_shipping/observer</class>
                        <method>saveItellaPickupPoint</method>
                    </itella_pickup_point_observer>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_type_onepage_save_order>
                <observers>
                    <itella_pickup_point_observer>
                        <type>singleton</type>
                        <class>itella_shipping/observer</class>
                        <method>saveItellaPickupPointToOrder</method>
                    </itella_pickup_point_observer>
                </observers>
            </checkout_type_onepage_save_order>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <Itella_Shipping_Model_Observer>
                        <type>singleton</type>
                        <class>itella_shipping/observer</class>
                        <method>addMassAction</method>
                    </Itella_Shipping_Model_Observer>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
        <models>
            <itella_shipping>
                <class>Itella_Shipping_Model</class>
                <resourceModel>itella_shipping_resource</resourceModel>
            </itella_shipping>
        </models>
        <resources>
            <itella_shipping_setup>
                <setup>
                    <module>Itella_Shipping</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </itella_shipping_setup>
            <itella_shipping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </itella_shipping_write>
            <itella_shipping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </itella_shipping_read>
        </resources>
        <helpers>
            <itella_shipping>
                <class>Itella_Shipping_Helper</class>
            </itella_shipping>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <itella_shipping_terminalfield>
                    <file>itella_shipping/terminalfield.xml</file>
                </itella_shipping_terminalfield>
            </updates>
        </layout>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Itella_Shipping.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <itellashipping>
                    <file>itellashipping.xml</file>
                </itellashipping>
            </updates>
        </layout>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Itella_Shipping.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <Itella_Shipping>
                <use>admin</use>
                <args>
                    <module>Itella_Shipping</module>
                    <frontName>itella_shipping</frontName>
                </args>
            </Itella_Shipping>
            <adminhtml>
                <args>
                    <modules>
                        <itella_shipping before="Mage_Adminhtml">Itella_Shipping_Adminhtml</itella_shipping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <carriers>
            <itella>
                <user backend_model="adminhtml/system_config_backend_encrypted"/>
                <password backend_model="adminhtml/system_config_backend_encrypted"/>
                <active>0</active>
                <sallowspecific>1</sallowspecific>
                <allowed_methods>PARCEL_TERMINAL,COURIER</allowed_methods>  
                <handling>0</handling>
                <model>Itella_Shipping_Model_Carrier</model>
                <title>Itella</title>
                <specificerrmsg>This shipping method is currently unavailable.</specificerrmsg>
                <unit_of_measure>KG</unit_of_measure>
                <max_package_weight>150</max_package_weight>
                <pick_up_time_start>8:00</pick_up_time_start>
                <pick_up_time_finish>17:00</pick_up_time_finish>
                <location_update></location_update>
                <sort_order>1</sort_order>
            </itella>
        </carriers>
    </default>
</config>